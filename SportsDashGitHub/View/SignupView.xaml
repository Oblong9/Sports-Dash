<Window x:Class="SportsDash.View.SignupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsDash.View"
        xmlns:viewModel="clr-namespace:SportsDash.ViewModel"
        mc:Ignorable="d"
        Title="SignupView" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/sports-dash-website-favicon-color.png"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanMinimize">

    <Window.DataContext>
        <viewModel:SignupVM/>
    </Window.DataContext>
    
    <Grid>
        <Border CornerRadius="10">
            <Border.Background>
                <ImageBrush ImageSource="/Images/sports-dash-background.png"/>
            </Border.Background>
        </Border>

        <Border CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Color="#060929" Opacity=".70"/>
            </Border.Background>

            <Image Source="/Images/sports-dash-color-transparent.png"
                   Width="850"
                   Height="80"
                   VerticalAlignment="Top"
                   Margin="0, 20, 0, 0"
                   Stretch="Uniform"/>
        </Border>

        <Border Background="#121212"
                CornerRadius="10"
                Height="600"
                Width="500"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="0, 0, 0, 50">


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Content="Sign Up"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="40"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0, 0, 0, 0"/>

                <StackPanel Grid.Row="1">
                    <Label Content="Email"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontSize="26"/>

                    <Border CornerRadius="10"
                            Background="#404040"
                            Width="400"
                            Height="50">

                        <TextBox
                         x:Name="EmailTextBox"
                         Width="400"
                         Height="50"
                         Grid.Column="0"
                         Grid.Row="1"
                         BorderThickness="0"
                         Padding="10"
                         Margin="1"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Background="Transparent"
                         Foreground="White"
                         HorizontalAlignment="Center"
                         FontSize="20"
                         Text="{Binding Email}"
                         />

                    </Border>

                </StackPanel>

                <StackPanel Grid.Row="2">
                    <Label Content="Username"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontSize="26"/>

                    <Border CornerRadius="10"
                            Background="#404040"
                            Width="400"
                            Height="50">
                        
                        <TextBox
                         x:Name="UsernameTextBox"
                         Width="400"
                         Height="50"
                         Grid.Column="0"
                         Grid.Row="1"
                         BorderThickness="0"
                         Padding="10"
                         Margin="1"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Background="Transparent"
                         Foreground="White"
                         HorizontalAlignment="Center"
                         FontSize="20"
                         
                         Text="{Binding Username}"
                         />
                        
                    </Border>

                </StackPanel>

                <StackPanel Grid.Row="3">
                    <Label Content="Password"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontSize="26"/>

                    <Border CornerRadius="10"
                            Background="#404040"
                            Width="400"
                            Height="50">

                        <!-- Change to password box later-->
                        <TextBox
                         x:Name="PasswordTextBox"
                         Grid.Column="0"
                         Grid.Row="1"
                         Width="400"
                         Height="50"
                         BorderThickness="0"
                         Padding="10"
                         Margin="1"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Background="Transparent"
                         Foreground="White"
                         HorizontalAlignment="Center"
                         FontSize="20"
                         Text="{Binding Password}"
                         />

                    </Border>

                </StackPanel>

                <Button x:Name="SignUpButton"
                        Content="Sign Up"
                        Width="250"
                        Height="50"
                        Grid.Row="4"
                        HorizontalAlignment="Center"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="20"
                        Margin="0, 15, 0, 0"
                        Command="{Binding SubmitSignupButton}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#356E3B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#36873E"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>


            </Grid>
        </Border>

        <Button x:Name="SneakyButton" 
                Content="Sneaky Button"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="25" Click="SneakyButton_Click"
                />

        <Button Content="Exit" 
                FontSize="18" 
                Grid.Row="1"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                Width="100" Height="30" Margin="20" 
                BorderThickness="0"
                BorderBrush="{x:Null}" 
                Foreground="White" 
                Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#6F252C"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#8C303B"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>